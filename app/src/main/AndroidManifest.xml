<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="karl.dusenbery.segagenesistunes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FileBrowserActivity"
            android:label="@string/fileBrowser_activity_title"
            android:parentActivityName="karl.dusenbery.segagenesistunes.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="karl.dusenbery.segagenesistunes.MainActivity" />
        </activity>

        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/nowPlaying_activity_title"
            android:parentActivityName="karl.dusenbery.segagenesistunes.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="karl.dusenbery.segagenesistunes.MainActivity" />
        </activity>

        <activity
            android:name=".PlaylistActivity"
            android:label="@string/playlist_activity_title"
            android:parentActivityName="karl.dusenbery.segagenesistunes.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="karl.dusenbery.segagenesistunes.MainActivity" />
        </activity>

    </application>

</manifest>